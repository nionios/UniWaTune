<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Theme.UniWaTune"
    android:layout_width="wrap_content"
    android:layout_height="64dp"
    android:padding="0dp">

    <ImageButton
        android:id="@+id/notification_play_button"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:layout_toEndOf="@+id/notification_previous_button"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:clickable="true"
        android:focusable="true"
        android:minWidth="0pt"
        android:padding="0pt"
        android:scaleType="fitCenter"
        android:src="@drawable/baseline_pause_circle_24"
        app:tint="?attr/colorPrimary" />

    <ImageButton
        android:id="@+id/notification_previous_button"
        android:layout_width="51dp"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:layout_toEndOf="@+id/notification_title_text_view"
        android:background="@android:color/transparent"
        android:minWidth="0pt"
        android:padding="0pt"
        android:scaleType="fitCenter"
        android:src="@drawable/baseline_skip_previous_24"
        app:tint="?attr/colorPrimary" />

    <ImageButton
        android:id="@+id/notification_next_button"
        android:layout_width="51dp"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="false"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:layout_toEndOf="@+id/notification_play_button"
        android:background="@android:color/transparent"
        android:minWidth="0pt"
        android:padding="0pt"
        android:scaleType="fitCenter"
        android:src="@drawable/baseline_skip_next_24"
        app:tint="?attr/colorPrimary" />

    <ImageView
        android:id="@+id/notification_album_image"
        android:layout_width="64dp"
        android:layout_height="fill_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/notification_title_text_view"
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="7dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/notification_album_image"
        android:text="TextView"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/notification_artist_text_view"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_below="@+id/notification_title_text_view"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="10dp"
        android:layout_toStartOf="@+id/notification_previous_button"
        android:layout_toEndOf="@+id/notification_album_image"
        android:text="TextView"
        android:textSize="12sp" />

</RelativeLayout>
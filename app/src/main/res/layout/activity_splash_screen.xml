<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorPrimary"
    tools:context=".SplashScreenActivity">

    <ImageView
        android:id="@+id/logoWithoutHeadphones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/uniwatunes_logo_without_headphones" />

    <ImageView
        android:id="@+id/headPhones"
        android:layout_width="311dp"
        android:layout_height="510dp"
        app:layout_constraintBottom_toBottomOf="@+id/logoWithoutHeadphones"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/logoWithoutHeadphones"
        app:layout_constraintTop_toTopOf="@+id/logoWithoutHeadphones"
        app:layout_constraintVertical_bias="0.0"
        tools:srcCompat="@drawable/uniwatunes_logo_only_headphones" />

</androidx.constraintlayout.widget.ConstraintLayout>